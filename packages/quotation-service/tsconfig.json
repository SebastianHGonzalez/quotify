{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es3",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "declaration": true,
    },
    "exclude": [
        "coverage",
        "node_modules",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "**/*test*",
        "**/*spec*"
    ],
    "include": [
        "src/**/*"
    ]
}
