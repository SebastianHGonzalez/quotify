{
	"name": "@sebastianhgonzalez/quotation-web-service",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"start": "npm run build && npm run serve",
		"serve": "nodemon --exec npm run babel-node -- dist/startServer.js",
		"test": "jest",
		"build": "npm run build-ts && npm run tslint",
		"build-ts": "tsc",
		"babel-node": "babel-node",
		"tslint": "tslint -c tslint.json -p tsconfig.json --fix"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"testRegex": "/src/.*\\.test\\.(ts|tsx)$",
		"transform": {
			"^.+\\.jsx?$": "babel-jest",
			"^.+\\.(ts|tsx)$": "typescript-babel-jest"
		}
	},
	"author": "Sebastian Gonzalez <sebastian.h.gonzalez@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/express": "^4.16.0",
		"@types/jest": "^23.3.7",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-jest": "^23.6.0",
		"babel-preset-env": "^1.7.0",
		"jest": "^23.6.0",
		"nodemon": "^1.18.4",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3",
		"typescript-babel-jest": "^1.0.5"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"express": "^4.16.4",
		"@sebastianhgonzalez/quotation-service": "^1.0.0"
	}
}
